rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User documents: each user can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Per-user sales subcollection
      match /sales/{saleId} {
        allow read: if request.auth != null && request.auth.uid == userId;

        // Create: ensure authenticated owner and required fields are present and valid
        allow create: if request.auth != null
                      && request.auth.uid == userId
                      && request.resource.data.keys().hasAll(['amount','date'])
                      && request.resource.data.amount is number
                      && request.resource.data.date is string;

        // Update: only owner and if amount/date are valid when present. Disallow client updates to server-managed stats.
        allow update: if request.auth != null
                      && request.auth.uid == userId
                      && ( !('totalSalesCount' in request.resource.data)
                           && !('totalAmount' in request.resource.data)
                           && !('todaySalesCount' in request.resource.data)
                           && !('lastSaleAt' in request.resource.data)
                         )
                      && (
                        !('amount' in request.resource.data) || request.resource.data.amount is number
                      )
                      && (
                        !('date' in request.resource.data) || request.resource.data.date is string
                      );

        // Delete: owner only
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Top-level sales collection (if used): only owner can read/write
    match /sales/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}
